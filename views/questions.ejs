<body>
    <%- include('partials/navbar.ejs'); %>
    <div class="container">
        <div class="card" id="question-form">
            <div class="card-header">
                <h3>Make a question :)</h3>
            </div>
            <div class="card-body">
                <form method="POST" action="/save">
                    <label>Title</label>
                    <input type="text" placeholder="Title" class="form-control" name="title">
                    <br><label>Question</label>
                    <textarea placeholder="Ask your question here" class="form-control" name="description"></textarea>
                    <br>
                    <button class="btn btn-primary">Ask question!</button>
                </form>
            </div>
        </div>
</body>

